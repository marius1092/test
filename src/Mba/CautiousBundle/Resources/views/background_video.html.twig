{% if page.Background is defined and (page.Background.imageName is not defined or page.Background.imageName | length == 0) %}
<video id="index_video" class="video-js vjs-default-skin" controls preload="auto" width="100%" height="100%"         
        poster="{% if page.Background.posterImageName is defined and page.Background.posterImageName | length > 0 %}{{vich_uploader_asset(page.Background, 'poster_image')}}{% endif %}"
        data-setup='{ "controls": false, "autoplay": true, "preload": "auto", "loop": true }'>
   {% if page.Background.VideoMp4Name is defined and page.Background.VideoMp4Name | length > 0 %}<source src="{{ vich_uploader_asset(page.Background, 'video_mp4') }}" type='video/mp4'></source>{% endif %}
   {% if page.Background.VideoWebmName is defined and page.Background.VideoWebmName | length > 0 %}<source src="{{ vich_uploader_asset(page.Background, 'video_webm') }}" type='video/webm'></source>{% endif %}
   {% if page.Background.VideoOggName is defined and page.Background.VideoOggName | length > 0 %}<source src="{{ vich_uploader_asset(page.Background, 'video_ogg') }}" type='video/ogg'></source>{% endif %}                        
</video>    
{% endif %} 
